<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--List view -->
    <record id="sh_employee_category_list_view" model="ir.ui.view">
        <field name="name">sh.employee.category.list</field>
        <field name="model">sh.employee.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
                <field name="ref"></field>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="sh_employee_category_form_view" model="ir.ui.view">
        <field name="name">sh.employee.category.form</field>
        <field name="model">sh.employee.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="name">
                        <field name="name"></field>
                        <field name="ref"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action -->
    <record id="sh_employee_category_action" model="ir.actions.act_window">
        <field name="name">name</field>
        <field name="res_model">sh.employee.category</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
