        <field name="arch" type="xml">
            <form string="support tickets">
                <field name="name"/>
            </form>
        </field>
    </record> -->

    <record id="sh_support_ticket_form" model="ir.ui.view">
        <field name="name">sh.support.ticket.form</field>
        <field name="model">sh.support.ticket</field>
        <field name="arch" type="xml">
            <form string="xyz">
                <sheet>
                    <div name="button_box">
                        <button string="Task" icon="fa-tasks">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                </span>
                                customer
                            </div>
                        </button>
                        <button string="Task" icon="fa-tasks">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                </span>
                                invoice
                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="name"></field>
                        <field name="customers"></field>
                        <field name="priority" widget="priority"></field>
                        <field name="assigned_developer"></field>
                        <field name="state"></field>
                        <field name="leadership_rating" widget="priority"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_support_ticket_action" model="ir.actions.act_window">
        <field name="name">name</field>
        <field name="res_model">sh.support.ticket</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>