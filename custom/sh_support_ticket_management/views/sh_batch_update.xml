<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_batch_update_form" model="ir.ui.view">
        <field name="name">sh.batch.update.form</field>
        <field name="model">sh.batch.update</field>
        <field name="arch" type="xml">
            <form string="xyz">
                <sheet>
                    <group>
                        <field name="state"></field>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" name="save" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

        <record id="sh_batch_update_action" model="ir.actions.act_window">
        <field name="name">name</field>
        <field name="res_model">sh.batch.update</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{"values":"Passing context values"}</field>
    </record>
</odoo>
