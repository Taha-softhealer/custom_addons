<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--List view -->
    <record id="sh_manager_list_view" model="ir.ui.view">
        <field name="name">sh.manager.list</field>
        <field name="model">sh.manager</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
            </list>
        </field>
    </record>


    <!-- Form view -->
    <record id="sh_manager_form_view" model="ir.ui.view">
        <field name="name">sh.manager.form</field>
        <field name="model">sh.manager</field>
        <field name="arch" type="xml">
            <form string="xyz">
                <sheet>
                    <group>
                        <field name="name"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_manager_action" model="ir.actions.act_window">
        <field name="name">name</field>
        <field name="res_model">sh.manager</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>